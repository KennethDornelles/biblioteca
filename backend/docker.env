# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS PARA DOCKER
# ========================================
# Configurações PostgreSQL para o container
POSTGRES_DB=biblioteca_universitaria
POSTGRES_USER=biblioteca
POSTGRES_PASSWORD=123456

# URL de conexão da aplicação (usa as mesmas credenciais acima)
DATABASE_URL="postgresql://biblioteca:123456@postgres:5432/biblioteca_universitaria"

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
PORT=3000
NODE_ENV=development
APP_NAME="Biblioteca Universitária API"
APP_VERSION="1.0.0"
APP_URL=http://localhost:3000

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
JWT_SECRET=sua_chave_secreta_aqui_mude_em_producao
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=refresh_secret_aqui
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de senha
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# ========================================
# CONFIGURAÇÕES DO REDIS PARA DOCKER
# ========================================
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app
SMTP_FROM=noreply@biblioteca.edu.br
SMTP_FROM_NAME="Biblioteca Universitária"
SMTP_SECURE=false

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ========================================
# CONFIGURAÇÕES DO SWAGGER
# ========================================
SWAGGER_TITLE="Biblioteca Universitária API"
SWAGGER_DESCRIPTION="API para gerenciamento de biblioteca universitária"
SWAGGER_VERSION="1.0.0"
SWAGGER_PATH=api-docs
SWAGGER_FAVICON=

# ========================================
# CONFIGURAÇÕES DE TESTE PARA DOCKER
# ========================================
TEST_DATABASE_URL="postgresql://biblioteca:123456@postgres:5432/biblioteca_test"
TEST_REDIS_URL="redis://redis:6379/1"
TEST_NODE_ENV=test

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000
CACHE_CHECK_PERIOD=600

# ========================================
# CONFIGURAÇÕES DE SESSÃO
# ========================================
SESSION_SECRET=sua_chave_secreta_de_sessao
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true

# ========================================
# CONFIGURAÇÕES DE CORS
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:4200
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
