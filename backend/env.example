# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DATABASE_URL="postgresql://biblioteca:123456@localhost:5433/biblioteca_universitaria"

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
PORT=3000
NODE_ENV=development
APP_NAME="Biblioteca Universitária API"
APP_VERSION="1.0.0"
APP_URL="http://localhost:3000"

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
JWT_SECRET=sua_chave_secreta_aqui_mude_em_producao
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=refresh_secret_aqui
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de senha
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:4200
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# ========================================
# CONFIGURAÇÕES DO REDIS
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app
SMTP_FROM=noreply@biblioteca.edu.br
SMTP_FROM_NAME="Biblioteca Universitária"

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURAÇÕES DO SWAGGER
# ========================================
SWAGGER_TITLE="Biblioteca Universitária API"
SWAGGER_DESCRIPTION="API para gerenciamento de biblioteca universitária"
SWAGGER_VERSION="1.0.0"
SWAGGER_PATH=api-docs

# ========================================
# CONFIGURAÇÕES DE TESTE
# ========================================
TEST_DATABASE_URL="postgresql://biblioteca:123456@localhost:5433/biblioteca_test"
TEST_REDIS_URL="redis://localhost:6379/1"

