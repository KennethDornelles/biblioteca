# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
# IMPORTANTE: Use conexão segura em produção
DATABASE_URL="postgresql://biblioteca:PASSWORD_AQUI@localhost:5433/biblioteca_universitaria"

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
PORT=3000
NODE_ENV=development
APP_NAME="Biblioteca Universitária API"
APP_VERSION="1.0.0"
APP_URL="http://localhost:3000"

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# CRÍTICO: Mude estas chaves em produção!
# Use: openssl rand -base64 32
JWT_SECRET=GERE_UMA_CHAVE_SECRETA_FORTE_AQUI_COM_PELO_MENOS_32_CARACTERES
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=GERE_OUTRA_CHAVE_SECRETA_DIFERENTE_PARA_REFRESH_TOKEN
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de senha
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:4200
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# ========================================
# CONFIGURAÇÕES DO REDIS
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
# Configure com seus dados reais de SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app_ou_token
SMTP_FROM=noreply@biblioteca.edu.br
SMTP_FROM_NAME="Biblioteca Universitária"

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================
# 15 minutos = 900000ms
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURAÇÕES DO SWAGGER
# ========================================
SWAGGER_TITLE="Biblioteca Universitária API"
SWAGGER_DESCRIPTION="API para gerenciamento de biblioteca universitária"
SWAGGER_VERSION="1.0.0"
SWAGGER_PATH=api-docs

# ========================================
# CONFIGURAÇÕES DE TESTE
# ========================================
TEST_DATABASE_URL="postgresql://biblioteca:123456@localhost:5433/biblioteca_test"
TEST_REDIS_URL="redis://localhost:6379/1"

# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================
# Exemplos para produção (descomente e configure)
# NODE_ENV=production
# DATABASE_URL="postgresql://user:password@prod-host:5432/biblioteca_prod?sslmode=require"
# REDIS_URL="rediss://user:password@prod-redis:6380"
# JWT_SECRET="chave-extremamente-forte-gerada-com-openssl-rand-base64-64"
# JWT_REFRESH_SECRET="outra-chave-diferente-e-extremamente-forte"

# ========================================
# INSTRUÇÕES DE SEGURANÇA
# ========================================
# 1. NUNCA commite este arquivo com dados reais
# 2. Use ferramentas como dotenv-vault ou AWS Secrets Manager em produção
# 3. Gere chaves JWT com: openssl rand -base64 64
# 4. Use senhas de banco fortes e conexões SSL em produção
# 5. Configure CORS apenas para domínios necessários
# 6. Use HTTPS em produção
# 7. Configure logs para serem enviados para serviços externos em produção
